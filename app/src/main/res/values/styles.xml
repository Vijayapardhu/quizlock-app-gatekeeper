<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.QuizLock" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorOnSurface">@color/on_surface</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Window -->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        
        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.QuizLock.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.QuizLock.Headline2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.QuizLock.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.QuizLock.Body2</item>
    </style>

    <style name="Theme.QuizLock" parent="Base.Theme.QuizLock" />
    
    <!-- Quiz theme with dimmed background -->
    <style name="Theme.QuizLock.Quiz" parent="Theme.QuizLock">
        <item name="android:windowBackground">@color/quiz_background</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/QuizAnimation</item>
    </style>
    
    <!-- Animation styles -->
    <style name="QuizAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_up_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_down_exit</item>
    </style>
    
    <!-- Card style -->
    <style name="QuizLock.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="android:layout_margin">16dp</item>
    </style>
    
    <!-- Button styles -->
    <style name="QuizLock.Button.Primary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    
    <style name="QuizLock.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    
    <!-- Typography -->
    <style name="TextAppearance.QuizLock.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/on_background</item>
    </style>
    
    <style name="TextAppearance.QuizLock.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:fontFamily">@font/sf_pro_display_semibold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/on_background</item>
    </style>
    
    <style name="TextAppearance.QuizLock.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/on_background</item>
    </style>
    
    <style name="TextAppearance.QuizLock.Body2" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/on_surface_variant</item>
    </style>
    
    <!-- Input field style -->
    <style name="QuizLock.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
    </style>
</resources>