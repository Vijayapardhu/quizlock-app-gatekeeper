<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Apple-Style Light Theme -->
    <style name="Theme.SmartAppGatekeeper" parent="Theme.Material3.DayNight">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/fill_quaternary</item>
        <item name="colorOnPrimaryContainer">@color/text_primary</item>
        
        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/text_secondary</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/fill_tertiary</item>
        <item name="colorOnSecondaryContainer">@color/text_primary</item>
        
        <!-- Tertiary Colors -->
        <item name="colorTertiary">@color/apple_purple</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/fill_quaternary</item>
        <item name="colorOnTertiaryContainer">@color/text_primary</item>
        
        <!-- Error Colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorErrorContainer">@color/fill_quaternary</item>
        <item name="colorOnErrorContainer">@color/text_primary</item>
        
        <!-- Background Colors -->
        <item name="android:colorBackground">@color/background_primary</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorSurface">@color/background_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/background_secondary</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
        
        <!-- Outline Colors -->
        <item name="colorOutline">@color/separator</item>
        <item name="colorOutlineVariant">@color/separator_opaque</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/background_primary</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@color/background_primary</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Window Background -->
        <item name="android:windowBackground">@color/background_primary</item>
        
        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorTertiary">@color/text_tertiary</item>
        
        <!-- Card Style -->
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        
        <!-- Shape Appearance -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.App.LargeComponent</item>
    </style>
    
    <!-- Apple-Style Card Theme -->
    <style name="Theme.SmartAppGatekeeper.Card" parent="Theme.SmartAppGatekeeper">
        <item name="android:windowBackground">@color/card_background</item>
        <item name="android:colorBackground">@color/card_background</item>
    </style>
    
    <!-- Apple-Style Dialog Theme -->
    <style name="Theme.SmartAppGatekeeper.Dialog" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:windowBackground">@drawable/apple_dialog_background</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowAnimationStyle">@style/AppleDialogAnimation</item>
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/card_background</item>
        <item name="colorOnSurface">@color/text_primary</item>
    </style>
    
    <!-- Apple-Style Bottom Sheet Theme -->
    <style name="Theme.SmartAppGatekeeper.BottomSheet" parent="Theme.Material3.DayNight.BottomSheetDialog">
        <item name="android:windowBackground">@drawable/apple_bottom_sheet_background</item>
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/card_background</item>
        <item name="colorOnSurface">@color/text_primary</item>
    </style>
    
    <!-- Shape Appearances -->
    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    
    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
    
    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    
    <!-- Text Styles -->
    <style name="TextAppearance.App.LargeTitle" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">34sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>
    
    <style name="TextAppearance.App.Title1" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>
    
    <style name="TextAppearance.App.Title2" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">0</item>
    </style>
    
    <style name="TextAppearance.App.Title3" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">0</item>
    </style>
    
    <style name="TextAppearance.App.Headline" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">0</item>
    </style>
    
    <style name="TextAppearance.App.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">0</item>
    </style>
    
    <style name="TextAppearance.App.Callout" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:letterSpacing">0</item>
    </style>
    
    <style name="TextAppearance.App.Subhead" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:letterSpacing">0</item>
    </style>
    
    <style name="TextAppearance.App.Footnote" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:letterSpacing">0</item>
    </style>
    
    <style name="TextAppearance.App.Caption1" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="android:letterSpacing">0</item>
    </style>
    
    <style name="TextAppearance.App.Caption2" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="android:letterSpacing">0</item>
    </style>
    
    <!-- Legacy Text Styles for Compatibility -->
    <style name="Text.Headline" parent="TextAppearance.App.Headline" />
    <style name="Text.Subtitle" parent="TextAppearance.App.Subhead" />
    <style name="Text.Body" parent="TextAppearance.App.Body" />
    <style name="Text.Caption" parent="TextAppearance.App.Caption1" />
    <style name="Text.Title" parent="TextAppearance.App.Title2" />
    
    <!-- Legacy Button Styles for Compatibility -->
    <style name="Button.Primary" parent="Widget.App.Button.Primary" />
    <style name="Button.Secondary" parent="Widget.App.Button.Secondary" />
    
    <!-- Legacy Card Styles for Compatibility -->
    <style name="Card.Stat" parent="Widget.App.Card" />
    
    <!-- Legacy Progress Bar Styles for Compatibility -->
    <style name="ProgressBar.Custom" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressTint">@color/progress_fill</item>
        <item name="android:progressBackgroundTint">@color/progress_background</item>
    </style>
    
    <!-- Button Styles -->
    <style name="Widget.App.Button.Primary" parent="Widget.Material3.Button">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/apple_button_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
    
    <style name="Widget.App.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/apple_button_secondary</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
    
    <style name="Widget.App.Button.Tertiary" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
    
    <style name="Widget.App.Button.Destructive" parent="Widget.Material3.Button">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/apple_button_destructive</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
    
    <!-- Card Styles -->
    <style name="Widget.App.Card" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="strokeColor">@color/card_border</item>
        <item name="strokeWidth">0.5dp</item>
        <item name="android:outlineProvider">bounds</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    
    <style name="Widget.App.Card.Elevated" parent="Widget.App.Card">
        <item name="cardElevation">4dp</item>
        <item name="android:outlineProvider">bounds</item>
    </style>
    
    <!-- List Item Styles -->
    <style name="Widget.App.ListItem" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">16dp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="strokeColor">@color/separator</item>
        <item name="strokeWidth">0.5dp</item>
        <item name="android:outlineProvider">bounds</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    
    
    <!-- Animation Styles -->
    <style name="AppleDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/apple_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/apple_dialog_exit</item>
    </style>
    
    <style name="AppleBottomSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/apple_bottom_sheet_enter</item>
        <item name="android:windowExitAnimation">@anim/apple_bottom_sheet_exit</item>
    </style>
</resources>