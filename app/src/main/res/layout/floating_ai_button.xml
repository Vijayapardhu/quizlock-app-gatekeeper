<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/floating_ai_background">

    <ImageView
        android:id="@+id/floating_ai_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_ai_bot"
        android:scaleType="centerCrop"
        android:background="@drawable/floating_ai_button_background"
        android:padding="12dp"
        android:contentDescription="AI Quiz Assistant" />

    <!-- Pulsing animation indicator -->
    <View
        android:id="@+id/pulse_indicator"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@drawable/pulse_background"
        android:alpha="0.3" />

</FrameLayout>
