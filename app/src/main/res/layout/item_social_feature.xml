<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/social_feature_background"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/text_feature_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Feature Title"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/social_text_primary" />

    <TextView
        android:id="@+id/text_feature_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="Feature description"
        android:textSize="14sp"
        android:textColor="@color/social_text_secondary"
        android:layout_marginStart="12dp" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_forward"
        android:layout_marginStart="8dp"
        android:contentDescription="Arrow" />

</LinearLayout>
