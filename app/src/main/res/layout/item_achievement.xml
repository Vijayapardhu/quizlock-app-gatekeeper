<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    style="@style/Widget.App.Card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <!-- Achievement Icon -->
        <ImageView
            android:id="@+id/image_achievement_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_quiz"
            android:background="@drawable/apple_button_secondary"
            android:padding="12dp"
            android:scaleType="centerInside" />

        <!-- Achievement Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/text_achievement_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Achievement Title"
                android:textAppearance="@style/TextAppearance.App.Headline"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/text_achievement_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Achievement description"
                android:textAppearance="@style/TextAppearance.App.Body"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/text_achievement_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5/10 (50%)"
                android:textAppearance="@style/TextAppearance.App.Footnote"
                android:textColor="@color/primary_color"
                android:layout_marginTop="4dp" />

            <ProgressBar
                android:id="@+id/progress_achievement"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="8dp"
                android:progressTint="@color/primary_color"
                android:progressBackgroundTint="@color/fill_tertiary"
                android:max="100"
                android:progress="50" />

        </LinearLayout>

        <!-- Status Icon -->
        <ImageView
            android:id="@+id/image_achievement_status"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_quiz"
            android:visibility="gone"
            android:scaleType="centerInside" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
