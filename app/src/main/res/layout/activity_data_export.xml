<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

        <Button
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â† Back"
            style="@style/Widget.App.Button.Tertiary" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Data Export"
                android:textAppearance="@style/TextAppearance.App.Title2"
                android:textColor="@color/text_primary"
                android:gravity="center" />

            <View
                android:layout_width="60dp"
                android:layout_height="1dp" />

        </LinearLayout>

        <!-- Data Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.App.Card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Data Summary"
                    android:textAppearance="@style/TextAppearance.App.Headline"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/text_export_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading data summary..."
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingMultiplier="1.2" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Export Options -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.App.Card">

            <LinearLayout
                android:id="@+id/layout_export_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Export Options"
                    android:textAppearance="@style/TextAppearance.App.Headline"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/button_export_json"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Export as JSON"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.App.Button.Primary" />

                <Button
                    android:id="@+id/button_export_csv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Export as CSV"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.App.Button.Secondary" />

                <Button
                    android:id="@+id/button_export_pdf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Export as PDF"
                    android:layout_marginBottom="16dp"
                    style="@style/Widget.App.Button.Secondary" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/separator"
                    android:layout_marginVertical="8dp" />

                <Button
                    android:id="@+id/button_import_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Import Data"
                    android:layout_marginBottom="8dp"
                    style="@style/Widget.App.Button.Tertiary" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Danger Zone -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.App.Card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Danger Zone"
                    android:textAppearance="@style/TextAppearance.App.Headline"
                    android:textColor="@color/error"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Permanently delete all your data. This action cannot be undone."
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/button_delete_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delete All Data"
                    android:textColor="@color/white"
                    android:background="@drawable/apple_button_destructive"
                    style="@style/Widget.App.Button.Destructive" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>
