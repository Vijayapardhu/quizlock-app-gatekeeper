<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Profile Header Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.App.Card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- User Avatar and Basic Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:id="@+id/image_user_avatar"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_profile"
                        android:background="@drawable/apple_button_secondary"
                        android:padding="20dp"
                        android:scaleType="centerInside" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/text_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="John Doe"
                            android:textAppearance="@style/TextAppearance.App.Title2"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:id="@+id/text_user_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="john.doe@example.com"
                            android:textAppearance="@style/TextAppearance.App.Subhead"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:id="@+id/text_user_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Level 5 - Quiz Master"
                            android:textAppearance="@style/TextAppearance.App.Callout"
                            android:textColor="@color/primary_color"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- User Stats -->
                <TextView
                    android:id="@+id/text_user_stats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quizzes Completed: 25\nAverage Score: 85%\nCurrent Streak: 7 days\nTotal Coins: 1,250"
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingMultiplier="1.2" />

                <!-- Edit Profile Button -->
                <Button
                    android:id="@+id/button_edit_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Edit Profile"
                    style="@style/Widget.App.Button.Secondary" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Friends Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.App.Card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Friends"
                    android:textAppearance="@style/TextAppearance.App.Title3"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:id="@+id/layout_friends"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Friend Item Placeholder -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="12dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_profile"
                            android:background="@drawable/apple_button_secondary"
                            android:padding="10dp"
                            android:scaleType="centerInside" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Alice Johnson"
                                android:textAppearance="@style/TextAppearance.App.Headline"
                                android:textColor="@color/text_primary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Level 3 - Quiz Enthusiast"
                                android:textAppearance="@style/TextAppearance.App.Footnote"
                                android:textColor="@color/text_secondary" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1,200 coins"
                            android:textAppearance="@style/TextAppearance.App.Footnote"
                            android:textColor="@color/primary_color" />

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/button_add_friends"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Add Friends"
                    style="@style/Widget.App.Button.Tertiary" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Achievements Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.App.Card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Achievements"
                    android:textAppearance="@style/TextAppearance.App.Title3"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:id="@+id/layout_achievements"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Achievement Item Placeholder -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="12dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_quiz"
                            android:background="@drawable/apple_button_primary"
                            android:padding="10dp"
                            android:scaleType="centerInside"
                            android:tint="@color/white" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Quiz Master"
                                android:textAppearance="@style/TextAppearance.App.Headline"
                                android:textColor="@color/text_primary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Complete 25 quizzes"
                                android:textAppearance="@style/TextAppearance.App.Footnote"
                                android:textColor="@color/text_secondary" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="âœ“"
                            android:textAppearance="@style/TextAppearance.App.Title2"
                            android:textColor="@color/success" />

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/button_view_achievements"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="View All Achievements"
                    style="@style/Widget.App.Button.Tertiary" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Data Management Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.App.Card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data Management"
                    android:textAppearance="@style/TextAppearance.App.Title3"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/button_export_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Export My Data"
                    style="@style/Widget.App.Button.Secondary" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>
