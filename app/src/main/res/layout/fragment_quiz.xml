<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Quiz Header -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Card.Stat"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Quiz Info Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="❓"
                        android:textSize="24sp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Quiz Challenge"
                        style="@style/Text.Subtitle" />

                    <TextView
                        android:id="@+id/text_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Score: 0"
                        style="@style/Text.Body"
                        android:textColor="@color/progress_fill" />

                </LinearLayout>

                <!-- Question Progress -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/text_question_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Question 1 of 10"
                        style="@style/Text.Caption" />

                    <TextView
                        android:id="@+id/text_time_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30s"
                        style="@style/Text.Caption"
                        android:layout_marginStart="0dp"
                        android:textColor="@color/progress_fill" />

                </LinearLayout>

                <!-- Progress Bar -->
                <ProgressBar
                    android:id="@+id/progress_quiz"
                    style="@style/ProgressBar.Custom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="10" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Question Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Card.Stat"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Question Details -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/text_difficulty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Difficulty: Easy"
                        style="@style/Text.Caption"
                        android:background="@drawable/difficulty_background"
                        android:padding="4dp" />

                    <TextView
                        android:id="@+id/text_topic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Topic: General"
                        style="@style/Text.Caption"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/topic_background"
                        android:padding="4dp" />

                </LinearLayout>

                <!-- Question Text -->
                <TextView
                    android:id="@+id/text_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What is the capital of France?"
                    style="@style/Text.Body"
                    android:layout_marginBottom="16dp"
                    android:lineSpacingExtra="4dp" />

                <!-- Time Progress Bar -->
                <ProgressBar
                    android:id="@+id/progress_time"
                    style="@style/ProgressBar.Custom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="30"
                    android:progress="30"
                    android:layout_marginBottom="16dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Answer Options -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Card.Stat"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Option A -->
                <Button
                    android:id="@+id/button_option_a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A) London"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_marginBottom="12dp"
                    android:textAlignment="textStart"
                    android:gravity="start" />

                <!-- Option B -->
                <Button
                    android:id="@+id/button_option_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="B) Berlin"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_marginBottom="12dp"
                    android:textAlignment="textStart"
                    android:gravity="start" />

                <!-- Option C -->
                <Button
                    android:id="@+id/button_option_c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="C) Paris"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_marginBottom="12dp"
                    android:textAlignment="textStart"
                    android:gravity="start" />

                <!-- Option D -->
                <Button
                    android:id="@+id/button_option_d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="D) Madrid"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_marginBottom="16dp"
                    android:textAlignment="textStart"
                    android:gravity="start" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Card.Stat"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Action Buttons Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <Button
                        android:id="@+id/button_hint"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="💡 Hint"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_marginEnd="8dp"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/button_skip"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="⏭️ Skip"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_marginStart="8dp"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- Next Button -->
                <Button
                    android:id="@+id/button_next"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Next Question"
                    style="@style/Widget.Material3.Button"
                    android:visibility="gone" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Quiz Statistics -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Card.Stat">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quiz Statistics"
                    style="@style/Text.Subtitle"
                    android:layout_marginBottom="16dp" />

                <!-- Stats Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/text_correct_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            style="@style/Text.Headline"
                            android:textColor="@color/progress_fill" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Correct"
                            style="@style/Text.Caption" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/text_accuracy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            style="@style/Text.Headline"
                            android:textColor="@color/progress_fill" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Accuracy"
                            style="@style/Text.Caption" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/text_time_remaining"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0s"
                            style="@style/Text.Headline"
                            android:textColor="@color/progress_fill" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time Left"
                            style="@style/Text.Caption" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>
