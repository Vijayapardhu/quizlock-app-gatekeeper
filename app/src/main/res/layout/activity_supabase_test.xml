<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/button_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â† Back"
                style="@style/Widget.App.Button.Tertiary" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Supabase Connection Test"
                android:textAppearance="@style/TextAppearance.App.LargeTitle"
                android:textColor="@color/text_primary"
                android:gravity="center" />

        </LinearLayout>

        <!-- Test Buttons -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.App.Card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”§ Connection Tests"
                    android:textAppearance="@style/TextAppearance.App.Headline"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/button_test_connection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Test Basic Connection"
                    android:layout_marginBottom="12dp"
                    style="@style/Widget.App.Button.Primary" />

                <Button
                    android:id="@+id/button_test_auth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Test Authentication"
                    android:layout_marginBottom="12dp"
                    style="@style/Widget.App.Button.Secondary" />

                <Button
                    android:id="@+id/button_test_database"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Test Database Query"
                    style="@style/Widget.App.Button.Secondary" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Results -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.App.Card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Test Results"
                    android:textAppearance="@style/TextAppearance.App.Headline"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="@color/background_secondary"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/text_results"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Click a test button to start...\n"
                        android:textAppearance="@style/TextAppearance.App.Body"
                        android:textColor="@color/text_primary"
                        android:fontFamily="monospace"
                        android:textSize="12sp" />

                </ScrollView>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Configuration Info -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            style="@style/Widget.App.Card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âš™ï¸ Configuration"
                    android:textAppearance="@style/TextAppearance.App.Headline"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="URL: https://ginxtmvwwbrccxwbuhsm.supabase.co\n"
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="monospace"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anon Key: eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...\n"
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="monospace"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status: Configured\n"
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="monospace"
                    android:textSize="12sp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>
